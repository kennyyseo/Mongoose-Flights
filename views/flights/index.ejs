<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Mongoose Flights</title>
  </head>

  <body>
    <a href="/flights/new">Add Flight</a>
    <h1>Flights List</h1>
    <table>
      <thead>
        <tr>
          <th id="deleteFlight">Remove Flight</th>
          <th id="moreInfo">More Info</th>
          <th id="flightNo">Flight Number</th>
          <th id="airline">Airline</th>
          <th id="airport">Airport</th>
          <th id="departs">Departs</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(function(f) { %>
        <tr>
          <td>
            <form
              action="/flights/<%= f.id %>?_method=DELETE"
              class="delete-form"
              method="POST"
            >
              <button type="submit">Remove</button>
            </form>
          </td>
          <td>
            <a href="/flights/<%=f._id%>">Details</a>&nbsp;|&nbsp;
            <a href="/flights/<%=f._id%>/edit">Edit</a>
          </td>
          <td><%= f.flightNo %></td>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.departs %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
