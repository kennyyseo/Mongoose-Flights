<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Mongoose Flights</title>
  </head>

  <body>
    <a href="/flights/new">Add Flight</a>
    <h1>Flights List</h1>
    <table>
      <thead>
        <tr>
          <th id="moreInfo">More Info</th>
          <th id="flightNo">Flight Number</th>
          <th id="airline">Airline</th>
          <th id="airport">Airport</th>
          <th id="departs">Departs</th>
        </tr>
      </thead>
      <tbody>
        <!-- Write the line of EJS to iterate over movies using forEach -->
        <% flights.forEach(function(f) { %>
        <tr>
          <td><a href="/flights/<%= f._id %>">Details</a></td>
          <td><%= f.flightNo %></td>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.departs %></td>
        </tr>
        <!-- Close the forEach using EJS here -->
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
